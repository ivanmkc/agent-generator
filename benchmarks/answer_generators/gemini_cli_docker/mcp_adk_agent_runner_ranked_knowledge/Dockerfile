ARG BASE_IMAGE=gemini-cli:adk-python
FROM ${BASE_IMAGE}

# Install Python MCP SDK and YAML parser
RUN pip install --no-cache-dir mcp pyyaml rank-bm25

# Install adk-python
RUN pip install --no-cache-dir /workdir/repos/adk-python

# Create directory for app data
RUN mkdir -p /app/data /app/tools

# Copy the Knowledge Index (Generated by target_ranker.py)
COPY benchmark_generator/data/ranked_targets.yaml /app/data/ranked_targets.yaml

# Copy the MCP server script
COPY answer_generators/gemini_cli_docker/mcp_adk_agent_runner_ranked_knowledge/adk_knowledge_mcp.py /app/tools/adk_knowledge_mcp.py

# Configure Gemini CLI to use the MCP server
COPY answer_generators/gemini_cli_docker/mcp_adk_agent_runner_ranked_knowledge/settings.json /root/.gemini/settings.json

# Copy instructions
COPY answer_generators/gemini_cli_docker/mcp_adk_agent_runner_ranked_knowledge/INSTRUCTIONS_MCP_RUNNER.md /workdir/INSTRUCTIONS.md
ENV GEMINI_SYSTEM_MD=/workdir/INSTRUCTIONS.md
ENV ADK_SEARCH_PROVIDER=bm25

# Set working directory to repo root so relative paths work if needed
WORKDIR /workdir
