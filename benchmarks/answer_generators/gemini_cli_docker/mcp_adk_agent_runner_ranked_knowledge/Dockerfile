ARG BASE_IMAGE=gemini-cli:adk-python
FROM ${BASE_IMAGE}

# Install Python MCP SDK and YAML parser
RUN pip install --no-cache-dir mcp pyyaml

# Install adk-python
RUN pip install --no-cache-dir /workdir/repos/adk-python

# Create directory for app data
RUN mkdir -p /app/data /app/tools

# Copy the Knowledge Index (Generated by target_ranker.py)
COPY data/ranked_targets.yaml /app/data/ranked_targets.yaml

# Copy the MCP server script
COPY adk_knowledge_mcp.py /app/tools/adk_knowledge_mcp.py

# Configure Gemini CLI to use the MCP server
COPY settings.json /root/.gemini/settings.json

# Copy instructions
COPY INSTRUCTIONS_MCP_RUNNER.md /workdir/INSTRUCTIONS.md
ENV GEMINI_SYSTEM_MD=/workdir/INSTRUCTIONS.md

# Set working directory to repo root so relative paths work if needed
WORKDIR /workdir
