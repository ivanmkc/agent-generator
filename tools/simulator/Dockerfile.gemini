FROM node:20-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create a workspace directory
WORKDIR /workspace

# Set environment variables for headlessness
ENV GEMINI_APPROVAL_MODE=yolo
ENV NO_COLOR=1

# Command to be overridden by the test script
CMD ["bash"]
