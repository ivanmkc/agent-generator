FROM node:20-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code globally
RUN npm install -g @anthropic-ai/claude-code

# Create a workspace directory
WORKDIR /workspace

# Set environment variables for headlessness
ENV CLAUDE_TEST_MODE=1
ENV NO_COLOR=1

# Switch to non-root user for security (required by --dangerously-skip-permissions)
USER node

# Command to be overridden by the test script
CMD ["bash"]
